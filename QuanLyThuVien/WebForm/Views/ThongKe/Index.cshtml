@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Library.cshtml";
}

<script>
    $(document).ready(function () {
        $("#btn_thongke").click(function () {
            var $j = jQuery.noConflict();
           
            var tim_doc_gia_index = $j("#tim_doc_gia_index").val();
            
            var tu_ngay = $j("#tu_ngay").val();
            
            var den_ngay = $j("#den_ngay").val()


            $.ajax({
                url: '/ThongKe/GetData_ThongKe',
                type: "POST",
                data: { 'mathe': tim_doc_gia_index, 'tungay': tu_ngay, 'denngay': den_ngay },
                success: function (data, textStatus, jqXHR) {

                }
            });
        });
    });
</script>


